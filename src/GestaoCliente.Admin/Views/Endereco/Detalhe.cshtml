@model EnderecoModel
@{
    ViewData["Title"] = "Detalhe";
}

<div class="card">
    <div class="card-header">
        <a asp-controller="cliente" asp-action="listar" class="btn btn-warning" style="float:right;">Voltar</a>
        @ViewData["Title"]
    </div>
    <div class="card-body">


        <div class="row">
            <div class="col-md-2">
                <label>Logradouro</label>
                <input type="text" class="form-control" readonly value="@Model.Logradouro" />
            </div>
            <div class="col-md-2">
                <label>Numero</label>
                <input type="text" class="form-control" readonly value="@Model.Numero" />
            </div>
            <div class="col-md-2">
                <label>Numero</label>
                <input type="text" class="form-control" readonly value="@Model.Numero" />
            </div>
            <div class="col-md-2">
                <label>Complemento</label>
                <input type="text" class="form-control" readonly value="@Model.Complemento" />
            </div>
            <div class="col-md-2">
                <label>Cep</label>
                <input type="text" class="form-control" readonly value="@Model.Cep" />
            </div>
            <div class="col-md-2">
                <label>Estado</label>
                <input type="text" class="form-control" readonly value="@Model.Estado" />
            </div>
            <div class="col-md-2">
                <label>Cidade</label>
                <input type="text" class="form-control" readonly value="@Model.Cidade" />
            </div>
            <div class="col-md-1">
                <label>Bairro</label>
                <input type="text" class="form-control" readonly value="@Model.Bairro" />
            </div>

        </div>

    </div>
</div>
