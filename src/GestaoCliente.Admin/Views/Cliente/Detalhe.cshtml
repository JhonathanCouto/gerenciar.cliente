@model ClienteModel
@{
    ViewData["Title"] = "Detalhe";
}

<div class="card">
    <div class="card-header">
        <a asp-controller="cliente" asp-action="listar" class="btn btn-warning" style="float:right;">Voltar</a>
        @ViewData["Title"]
    </div>
    <div class="card-body">


        <div class="row">
            <div class="col-md-6">
                <label>Nome</label>
                <input type="text" class="form-control" readonly value="@Model.Nome" />
            </div>
            <div class="col-md-4">
                <label>Genero</label>
                <input type="text" class="form-control" readonly value="@Model.Genero" />
            </div>
            <div class="col-md-2">
                <label>Data de Nascimento</label>
                <input type="text" class="form-control" readonly value="@Model.DataNascimento.ToString("dd/MM/yyyy")" />
            </div>
        </div>

    </div>
</div>



