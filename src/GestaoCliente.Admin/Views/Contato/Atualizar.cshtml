
@model ContatoModel
@{
    ViewData["Title"] = "Atualizar";
}

<div class="card">
    <div class="card-header">
        <a href="@Url.Content($"/contato/listar?clienteId={Model.ClienteId}")" class="btn btn-warning" style="float:right;"><i class="fa fa-angle-double-left"></i>&ensp;Voltar</a>
        @ViewData["Title"]
    </div>
    <div class="card-body">

        <form class="" method="post" action="@Url.ActionLink("atualizar", "contato")">

            <div class="row">
                <input type="hidden" value="@Model.Id" id="Id" name="Id" />
                <div class="col-md-6">
                    <label>Telefone</label>
                    <input type="text" class="form-control" name="Telefone" id="Telefone" value="@Model.Telefone" />
                </div>
                <div class="col-md-6">
                    <label>Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" />
                </div>
                <div class="col-md-12 mt-3">
                    <button type="submit" name="name" value="Salvar" class="btn btn-success"><i class="fa fa-save"></i>&ensp;Salvar</button>
                </div>

            </div>
        </form>

    </div>
</div>

